@model ProjektniZadatak.Models.Jedinicamjere

@{
    ViewData["Title"] = "Brisanje";
}


<h3>Da li ste sigurni da želite da izbrišete datu jedinicu mjere?</h3>
<br />
<div>
    <h4>Jedinica mjere</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Jedinicamjerenaziv)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Jedinicamjerenaziv)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Jedinicamjereskracenica)
        </dt>
