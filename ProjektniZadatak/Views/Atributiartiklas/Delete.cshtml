@model ProjektniZadatak.Models.Atributiartikla

@{
    ViewData["Title"] = "Izbriši";
}



<h3>Da li ste sigurni da želite da izbrišete dati atribut?</h3>
<br />
<div>
    <h4 >Atributi artikla</h4>
    <hr />
    <dl >
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vrijednostatributa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vrijednostatributa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artikal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artikal.Artikalid)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vrstaatributa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vrstaatributa.Vrstaatributanaziv)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Artikalid" />
        <input type="hidden" asp-for="Vrstaatributaid" />
        <input type="submit" value="Izbriši" class="btn btn-danger" /> |
        <a class="text-white"  asp-action="Index">Nazad na listu</a>
    </form>
</div>
