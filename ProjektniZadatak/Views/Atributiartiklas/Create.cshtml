@model ProjektniZadatak.Models.Atributiartikla

@{
    ViewData["Title"] = "Dodaj novi atribut";
}

<h1>Dodaj novi atribut</h1>

<h4>Atributi artikla</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Artikalid" class="control-label"></label>
                <select asp-for="Artikalid" class ="form-control" asp-items="ViewBag.Artikalid"></select>
            </div>
            <div class="form-group">
                <label asp-for="Vrstaatributaid" class="control-label"></label>
                <select asp-for="Vrstaatributaid" class ="form-control" asp-items="ViewBag.Vrstaatributaid"></select>
            </div>
            <div class="form-group">
                <label asp-for="Vrijednostatributa" class="control-label"></label>
                <input asp-for="Vrijednostatributa" class="form-control" />
                <span asp-validation-for="Vrijednostatributa" class="text-danger"></span>
            </div><br />
            <div class="form-group" align="center">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="text-white" asp-action="Index">Nazad na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
