@model ProjektniZadatak.Models.Artikal

@{
    ViewData["Title"] = "Dodaj artikal";
}

<h1>Dodaj novi artikal</h1>

<hr />
<div class="row" align="center" >
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Jedinicamjereid" class="control-label"></label>
                <select asp-for="Jedinicamjereid" class ="form-control" asp-items="ViewBag.Jedinicamjereid"></select>
            </div>
            <div class="form-group">
                <label asp-for="Artikalsifra" class="control-label"></label>
                <input asp-for="Artikalsifra" class="form-control" />
                <span asp-validation-for="Artikalsifra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikalnaziv" class="control-label"></label>
                <input asp-for="Artikalnaziv" class="form-control" />
                <span asp-validation-for="Artikalnaziv" class="text-danger"></span>
            </div><br />
            <div class="form-group" align="center">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
